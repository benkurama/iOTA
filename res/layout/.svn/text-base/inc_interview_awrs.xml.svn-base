<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AveSalesReload"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/d_etAveSalesReload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/GP"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/d_etAveSalesGP_Reload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TM"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/d_etAveSalesTM_Reload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Smart"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/d_etAveSalesSm_Reload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TnT"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/d_etAveSalesTnT_Reload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Sun"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/d_etAveSalesSun_Reload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    
</LinearLayout>
